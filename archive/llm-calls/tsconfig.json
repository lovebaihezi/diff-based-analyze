{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
